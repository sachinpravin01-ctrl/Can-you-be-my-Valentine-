<script>
const yesBtn = document.getElementById("yes");
const noBtn = document.getElementById("no");
const image = document.getElementById("mainImage");
const text = document.getElementById("questionText");

/* NO button runs away */
document.addEventListener("mousemove", (e) => {
  const rect = noBtn.getBoundingClientRect();
  const btnX = rect.left + rect.width / 2;
  const btnY = rect.top + rect.height / 2;

  const dx = e.clientX - btnX;
  const dy = e.clientY - btnY;
  const distance = Math.sqrt(dx * dx + dy * dy);

  if (distance < 200) {
    const angle = Math.atan2(dy, dx);
    noBtn.style.transform = `translate(
      ${-Math.cos(angle) * 200}px,
      ${-Math.sin(angle) * 200}px
    )`;
  }
});

/* YES CLICK ‚Üí IMAGE + TEXT CHANGE */
yesBtn.addEventListener("click", () => {
  image.src = "valentine.jpg";  // üëà make sure file exists
  text.innerHTML = "Yeahhh üíñ you are my Valentine ü•∞";

  noBtn.style.display = "none";

  yesBtn.style.left = "50%";
  yesBtn.style.transform = "translateX(-50%)";
});
</script>

